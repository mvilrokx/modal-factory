{
  "name": "modal",
  "version": "1.0.0",
  "description": "Zero-dependency, pure JavaScript, modal.",
  "main": "./dist/modal.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "webpack --progress --colors",
    "watch": "webpack --progress --colors --watch",
    "test": "tape --require babel-register test/**/*.js | faucet",
    "preprod": "rm -rf ./dist",
    "doc": "jsdoc -r src -d docs",
    "prod": "npm test && npm run doc && webpack --config webpack.prod.config.js -p",
    "prepublish": "npm run prod"
  },
  "keywords": ["modal", "popup"],
  "author": "Mark Vilrokx <mark.vilrokx@oracle.com>",
  "publishConfig": {
    "registry": "http://10.208.177.20/"
  },
  "license": "UNLICENCED",
  "repository": {
    "type": "git",
    "url": "git+https://git@orahub.oraclecorp.com:appslab/modal.git"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.23.0",
    "browser-sync": "^2.18.8",
    "css-loader": "^0.26.2",
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-import": "^2.2.0",
    "faucet": "0.0.1",
    "html-webpack-plugin": "^2.28.0",
    "jsdoc": "^3.4.3",
    "jsdom": "^9.11.0",
    "lodash": "^4.17.4",
    "postcss-cssnext": "^2.9.0",
    "postcss-loader": "^1.3.3",
    "style-loader": "^0.13.2",
    "tape": "^4.6.3",
    "webpack": "^2.2.1"
  }
}
