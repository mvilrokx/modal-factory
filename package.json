{
  "name": "modal-factory",
  "version": "1.0.0",
  "description": "Zero-dependency, pure JavaScript, modal dialogs.",
  "main": "./dist/modalFactory.js",
  "directories": {
    "test": "./test",
    "doc": "./doc"
  },
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "webpack --progress --colors",
    "watch": "webpack --progress --colors --watch",
    "test": "tape --require babel-register test/**/*.js | faucet",
    "preprod": "rm -rf ./dist",
    "prod": "npm test && npm run doc && webpack --config webpack.prod.config.js -p",
    "predoc": "rm -rf ./docs",
    "doc": "jsdoc -r src -d docs",
    "prepublish": "npm run prod"
  },
  "keywords": [
    "modal window",
    "modal dialog",
    "modal popup"
  ],
  "author": {
    "name": "Mark Vilrokx",
    "email": "mark@vilrokx.com",
    "url": "http://vilrokx.com"
  },
  "license": "UNLICENCED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mvilrokx/modal-factory.git"
  },
  "bugs": {
    "url": "https://github.com/mvilrokx/modal-factory/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "browser-sync": "^2.18.8",
    "css-loader": "^0.27.3",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-loader": "^1.7.0",
    "eslint-plugin-import": "^2.2.0",
    "faucet": "0.0.1",
    "html-webpack-plugin": "^2.28.0",
    "jsdoc": "^3.4.3",
    "jsdom": "^9.12.0",
    "lodash": "^4.17.4",
    "postcss-cssnext": "^2.10.0",
    "postcss-loader": "^1.3.3",
    "style-loader": "^0.16.0",
    "tape": "^4.6.3",
    "webpack": "^2.3.1"
  }
}
